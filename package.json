{
  "name": "wow-classic-raid-optimizer",
  "version": "1.0.0",
  "description": "WoW Classic Raid Composition Optimizer with Battle.net API integration",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": ["wow", "classic", "raid", "optimizer", "composition"],
  "author": "NinjaTech AI",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.ninjatech.wow-raid-optimizer",
    "productName": "WoW Raid Optimizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}